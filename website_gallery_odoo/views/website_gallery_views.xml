<odoo>
    <record model="ir.ui.view" id="website_gallery_list">
        <field name="name">Gallery List</field>
        <field name="model">website.gallery</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <!-- <field name="image_resizned" invisible="1"/>-->
                <field name="image"/>
                <field name="size"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="website_gallery_form">
        <field name="name">Gallery Form</field>
        <field name="model">website.gallery</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button">
                                <field name="active" widget="boolean_button" options='{"terminology": "active"}'/>
                            </button>
                            <button class="oe_stat_button" name="website_publish_button"
                                    type="object" icon="fa-globe">
                                <field name="website_published" widget="website_button"/>
                            </button>
                        </div>
                    </header>
                    <group>
                        <field name="name" required="1"/>
                        <field name="active"/>
                        <field name="website_published"/>
                        <!-- <field name="image_resizned" widget="image" required="1"/>-->
                        <field name="image" widget="image"/>
                        <field name="size" readonly="1"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

