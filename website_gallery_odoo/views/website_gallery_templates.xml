<odoo>
    <!-- Gallery page -->
    <template id="gallery_template" name="Gallery">
        <t t-call="website.layout">
            <link href="website_gallery_odoo/static/src/css/style.css" rel="stylesheet" id="bootstrap-css"/>
            <script src="website_gallery_odoo/static/src/js/gallery.js"/>
            <body>
                <div>
                    <section class="oe_snippet_body ">
                        <div class="container-fluid oe_structure"></div>
                        <div class="container">
                            <center>
                                <h2>Gallery</h2>
                            </center>
                            <div class="custom-gallery row mt16">
                                <t t-if="not gallery_images">
                                    <center>
                                        <h2>No images in Gallery</h2>
                                    </center>
                                </t>
                                <t t-foreach='gallery_images' t-as='gallery_image'>
                                    <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                                        <img id="myImg" class="img-responsive"
                                             t-attf-src="data:image/*;base64,{{gallery_image.image}}"
                                             style="height: 175px; width: 300px;" t-alt="gallery_image.name">
                                            <center>
                                                <t t-esc="gallery_image.name"/>
                                            </center>
                                        </img>
                                    </div>
                                    <div>
                                        <div id="myModal" class="modal" style="width:100%;height:100%">
                                            <img class="modal-content" id="modalImg"/>
                                            <span class="close">X</span>
                                            <div id="captionText"></div>
                                        </div>
                                    </div>
                                </t>
                            </div>


                        </div>
                    </section>
                </div>
            </body>
        </t>
    </template>
</odoo>